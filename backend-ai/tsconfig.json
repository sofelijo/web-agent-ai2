{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,    // ⬅️ AKTIF
    "noEmit": true,                        // ⬅️ DIBUTUHKAN AGAR VALID
    "skipLibCheck": true,
    "strict": true
  }
}
